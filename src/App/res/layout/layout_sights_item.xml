<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/sight_item_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/fstar" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="10dp" >

        <TextView
            android:id="@+id/sight_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="长城"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/sight_item_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sight_item_name"
            android:text="中国-北京-北京"
            android:textColor="#888888" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_score"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="10dp" >

        <TextView
            android:id="@+id/sight_item_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:text="9.6"
            android:textColor="#0099CC"
            android:textSize="32sp" />
    </RelativeLayout>

</LinearLayout>