<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/subtour_edit_ok"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="OK" />

        <Button
            android:id="@+id/subtour_edit_cancel"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="Cancel" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/subtour_edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="行程名称" >
            </EditText>

            <TextView
                android:id="@+id/subtour_edit_name_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="行程名称"
                android:textSize="24sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/subtour_edit_country_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="国家" />

            <Spinner
                android:id="@+id/subtour_edit_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/subtour_edit_province_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="省份" />

            <Spinner
                android:id="@+id/subtour_edit_province"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/subtour_edit_city_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="城市" />

            <Spinner
                android:id="@+id/subtour_edit_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/subtour_edit_sight_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="景点" />

            <Spinner
                android:id="@+id/subtour_edit_sight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            
            <TextView
                android:id="@+id/subtour_edit_sight_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="景点名称"
                android:textSize="24sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/subtour_edit_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="从" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-6dip"
                android:animateLayoutChanges="false"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/subtour_edit_start_date"
                    style="@style/TextAppearance.EditEvent_SpinnerButton"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0dp"
                    android:layout_weight="7"
                    android:contentDescription="日期"
                    android:paddingRight="4dp"
                    android:singleLine="true" />
            </LinearLayout>

            <TextView
                android:id="@+id/subtour_edit_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-6dip"
                android:animateLayoutChanges="false"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/subtour_edit_end_date"
                    style="@style/TextAppearance.EditEvent_SpinnerButton"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0dp"
                    android:layout_weight="7"
                    android:contentDescription="日期"
                    android:paddingRight="4dp"
                    android:singleLine="true" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>