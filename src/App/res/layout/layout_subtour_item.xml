<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/subtour_item_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:src="@drawable/fstar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/subtour_item_sight"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="blab blab blab blab blab blab blab blab" />

        <TextView
            android:id="@+id/subtour_item_time"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:gravity="right"
            android:text="2013-01-01 12:00:00" />
    </LinearLayout>

</LinearLayout>