<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center" >

    <ImageView
        android:id="@+id/subtour_item_image"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:contentDescription=""
        android:gravity="center"
        android:src="@drawable/fstar" />

    <Button
        android:id="@+id/subtour_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="-"
        android:visibility="gone">
    </Button>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/subtour_item_delete"
        android:layout_toRightOf="@id/subtour_item_image"
        android:orientation="vertical" >"

        <TextView
            android:id="@+id/subtour_item_sight"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="长城" />

        <TextView
            android:id="@+id/subtour_item_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="2013-1-1 ~ 2013-12-31" />
    </LinearLayout>

</RelativeLayout>