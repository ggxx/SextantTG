<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/comment_item_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:src="@drawable/comment" />

        <TextView
            android:id="@+id/comment_item_user"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="Jhon Smith" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/comment_item_comment"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="blab blab blab blab blab blab blab blab blab blab blab blab blab blab blab blab blab" />

        <TextView
            android:id="@+id/comment_item_time"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:gravity="right"
            android:text="2013-01-01 12:00:00" />

    </LinearLayout>

</LinearLayout>